<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.donotspampls.ezprotector</groupId>
    <artifactId>ezprotector</artifactId>
    <packaging>pom</packaging>

    <modules>
        <module>paper</module>
        <module>sponge</module>
        <module>waterfall</module>
    </modules>

    <name>eZProtector</name>
    <description>Securing your server the easy way!</description>
    <url>https://github.com/DoNotSpamPls/eZProtector</url>
    <version>1.1.0</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <licenses>
        <license>
            <name>GPLv3</name>
            <url>https://opensource.org/licenses/GPL-3.0</url>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:https://github.com/DoNotSpamPls/eZProtector.git</connection>
        <developerConnection>scm:git:git@github.com:DoNotSpamPls/eZProtector.git</developerConnection>
        <url>https://github.com/DoNotSpamPls/eZProtector</url>
    </scm>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/DoNotSpamPls/eZProtector/issues</url>
    </issueManagement>

    <repositories>
        <repository>
            <id>paper-repo</id>
            <url>https://papermc.io/repo/repository/maven-public/</url>
        </repository>
        <repository>
            <id>sponge-repo</id>
            <url>https://repo.spongepowered.org/maven</url>
        </repository>
    </repositories>

    <build>
        <defaultGoal>clean package</defaultGoal>
    </build>

    <distributionManagement>
        <repository>
            <id>codemc-releases</id>
            <url>https://repo.codemc.org/repository/maven-releases/</url>
        </repository>
        <snapshotRepository>
            <id>codemc-snapshots</id>
            <url>https://repo.codemc.org/repository/maven-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

</project>